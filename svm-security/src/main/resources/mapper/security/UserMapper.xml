<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="svm.security.dao.UserMapper">

    <resultMap id="BaseResultMap" type="svm.security.entity.User">
        <id column="user_id" jdbcType="NUMERIC" property="id" />
    </resultMap>
    <sql id="Base_Column_List">
        user_id, name, nickname, password, create_time
    </sql>

    <insert id="save" parameterType="svm.security.entity.User">
        insert into sys_user (
            <include refid="Base_Column_List" />
        )
        values (
            #{id,jdbcType=NUMERIC},
            #{name,jdbcType=VARCHAR},
            #{nickname,jdbcType=VARCHAR},
            #{password,jdbcType=VARCHAR},
            #{createTime,jdbcType=DATE}
        )
    </insert>
    <update id="update" parameterType="svm.security.entity.User">
        update sys_user
            set name = #{name,jdbcType=VARCHAR},
                nickname = #{nickname,jdbcType=VARCHAR},
                password = #{password,jdbcType=VARCHAR},
                create_time = #{createTime,jdbcType=DATE}
            where user_id = #{id,jdbcType=NUMERIC}
    </update>
    <delete id="delete" parameterType="java.lang.Long">
        delete from sys_user
            where user_id = #{id,jdbcType=NUMERIC}
    </delete>

    <select id="get" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from sys_user
        where user_id = #{id,jdbcType=NUMERIC}
    </select>
    <select id="getUserByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from sys_user
        where name = #{name,jdbcType=VARCHAR}
    </select>
</mapper>